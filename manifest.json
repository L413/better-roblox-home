{
  "manifest_version": 3,
  "name": "Better Roblox Homepage",
  "version": "1.0",
  "description": "Removes the "Todays Picks" and "Recommended For You" sections of the Roblox home page",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.roblox.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png"
  }
}
